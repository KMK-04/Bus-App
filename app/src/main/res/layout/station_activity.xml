<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FFFFFF">

    <!-- 정류소 이름 -->
    <TextView
        android:id="@+id/tv_station_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="16dp"
        android:textColor="#222222"
        android:textSize="22sp"
        android:textStyle="bold" />

    <!-- 노선명 및 방면 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/tv_route_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#8BC34A"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_destination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:textColor="#555555"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- 첫번째 버스 -->
    <LinearLayout
        android:id="@+id/layout_bus1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/tv_bus1_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#1565C0"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_bus1_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="24dp"
            android:textColor="#222222"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_bus1_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="24dp"
            android:textColor="#888888"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- 두번째 버스 (회차지 대기 표시용) -->
    <LinearLayout
        android:id="@+id/layout_bus2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_bus2_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#1565C0"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_bus2_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="24dp"
            android:textColor="#222222"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_bus2_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="24dp"
            android:textColor="#888888"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- 도착 정보 없음 메시지 -->
    <TextView
        android:id="@+id/tv_no_bus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="도착 예정 버스가 없습니다."
        android:textSize="16sp"
        android:textColor="#888888"
        android:gravity="center"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btn3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="새로고침" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="즐겨찾기" />

</LinearLayout>
